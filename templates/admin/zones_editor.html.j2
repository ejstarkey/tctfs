{% extends "layout.html.j2" %}

{% block title %}Zones Editor - {{ storm.name or 'UNNAMED' }} - Admin - TCTFS{% endblock %}

{% block content %}
<div class="zones-editor">
    <div class="mb-6">
        <a href="{{ url_for('admin.storm_browser') }}" class="text-blue-600 hover:text-blue-800">
            ‚Üê Back to Storm Browser
        </a>
    </div>
    
    <h1 class="text-3xl font-bold text-gray-900 mb-2">
        Zone Generation Editor: {{ storm.name or 'UNNAMED' }} ({{ storm.storm_id }})
    </h1>
    <p class="text-gray-600 mb-8">Configure watch/warning zone generation parameters</p>
    
    <!-- Current Zones -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Current Zones</h2>
        
        {% if zones %}
        <div class="space-y-4">
            {% for zone in zones %}
            <div class="border border-gray-200 rounded-lg p-4">
                <div class="flex items-center justify-between mb-2">
                    <h3 class="font-semibold text-gray-900">
                        {% if zone.zone_type == 'watch' %}
                            <span class="text-pink-600">Cyclone Watch</span>
                        {% else %}
                            <span class="text-red-600">Cyclone Warning</span>
                        {% endif %}
                    </h3>
                    <span class="text-sm text-gray-600">
                        Generated: {{ zone.generated_at_utc.strftime('%Y-%m-%d %H:%M UTC') }}
                    </span>
                </div>
                
                <p class="text-sm text-gray-600">
                    Valid: {{ zone.valid_from_utc.strftime('%m/%d %H:%M') }} - {{ zone.valid_to_utc.strftime('%m/%d %H:%M') }} UTC
                </p>
            </div>
            {% endfor %}
        </div>
        {% else %}
        <p class="text-gray-600 text-center py-4">No zones generated yet</p>
        {% endif %}
    </div>
    
    <!-- Parameters Editor -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Generation Parameters</h2>
        
        <form method="POST" class="space-y-6 max-w-2xl">
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label for="buffer_km" class="block text-sm font-semibold text-gray-700 mb-2">
                        Buffer Distance (km)
                    </label>
                    <input type="number" 
                           id="buffer_km" 
                           name="buffer_km" 
                           value="{{ parameters.buffer_km }}"
                           step="5"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                    <p class="text-xs text-gray-500 mt-1">Coastal buffer for zone polygons</p>
                </div>
                
                <div>
                    <label for="max_gap_km" class="block text-sm font-semibold text-gray-700 mb-2">
                        Max Gap (km)
                    </label>
                    <input type="number" 
                           id="max_gap_km" 
                           name="max_gap_km" 
                           value="{{ parameters.max_gap_km }}"
                           step="10"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                    <p class="text-xs text-gray-500 mt-1">Max gap to dissolve between segments</p>
                </div>
                
                <div>
                    <label for="smoothing_iterations" class="block text-sm font-semibold text-gray-700 mb-2">
                        Smoothing Iterations
                    </label>
                    <input type="number" 
                           id="smoothing_iterations" 
                           name="smoothing_iterations" 
                           value="{{ parameters.smoothing_iterations }}"
                           min="0"
                           max="5"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                    <p class="text-xs text-gray-500 mt-1">Polygon edge smoothing passes</p>
                </div>
                
                <div>
                    <label for="tofi_threshold_watch" class="block text-sm font-semibold text-gray-700 mb-2">
                        Watch Threshold (hours)
                    </label>
                    <input type="number" 
                           id="tofi_threshold_watch" 
                           name="tofi_threshold_watch" 
                           value="{{ parameters.tofi_threshold_watch }}"
                           step="6"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                    <p class="text-xs text-gray-500 mt-1">TOFI threshold for watch issuance</p>
                </div>
                
                <div>
                    <label for="tofi_threshold_warning" class="block text-sm font-semibold text-gray-700 mb-2">
                        Warning Threshold (hours)
                    </label>
                    <input type="number" 
                           id="tofi_threshold_warning" 
                           name="tofi_threshold_warning" 
                           value="{{ parameters.tofi_threshold_warning }}"
                           step="6"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                    <p class="text-xs text-gray-500 mt-1">TOFI threshold for warning issuance</p>
                </div>
            </div>
            
            <div class="pt-4 border-t border-gray-200">
                <button type="submit" 
                        class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition font-semibold">
                    Apply & Regenerate Zones
                </button>
                <p class="text-sm text-gray-600 mt-2">
                    This will regenerate zones using the updated parameters
                </p>
            </div>
        </form>
    </div>
</div>
{% endblock %}

{% block extra_css %}
<link rel="stylesheet" href="{{ url_for('static', filename='css/admin.css') }}">
{% endblock %}
