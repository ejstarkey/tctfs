# Flask
SECRET_KEY=change_me_to_something_very_secure_and_random
FLASK_ENV=development
FLASK_DEBUG=True

# Database (PostgreSQL with PostGIS)
SQLALCHEMY_DATABASE_URI=postgresql://tctfs_user:tctfs_pass@localhost:5432/tctfs_db

# Redis
REDIS_URL=redis://localhost:6379/0

# Email (Microsoft 365 / Outlook)
MAIL_SERVER=smtp.office365.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@outlook.com
MAIL_PASSWORD=your_password
MAIL_DEFAULT_SENDER=your_email@outlook.com

# Data Sources
CIMSS_ADT_URL=https://tropic.ssec.wisc.edu/real-time/adt/adt.html
UCAR_ADECK_BASE_URL=http://hurricanes.ral.ucar.edu/repository/data/adecks_open/

# Polling Cadences (minutes)
CIMSS_POLL_INTERVAL=10
ADECK_POLL_INTERVAL=15

# Security
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
